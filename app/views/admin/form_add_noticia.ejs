<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Noticia</title>
		</head>
	<body>

		<h1>Adicionar noticia</h1>
		
		<% if(validar){ %>
		<ul>
			<% for(var i = 0; i< validar.length; i++){ %>
			<li>
				<%= validar[i].msg %>
					
				</li>
			<%}%>
		</ul>
		<% } %>


		<form action="/noticias/salvar" method="POST">
			<label>Titulo</label>
			<input type="text" name="titulo" value="<%=noticia.titulo%>"/>
			<br>
			<label>Descrição</label>
			<textarea name="descricao" value="<%=noticia.descricao%>" rows="4" cols="20"></textarea> 
			<br>
			<label>Resumo</label>
			<input type="text" name="resumo" value="<%=noticia.resumo%>"/>
			<br>
			<label>Autor</label>
			<input type="text" name="autor" value="<%=noticia.autor%>"/>
			<br>
			<label>Data</label>
			<input type="date" name="data" />
			<br>
			<input type="submit" value="enivar"/>
		</form>

	</body>
</html>